<h2>ADMIN LOGIN FOR BMS</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "form-label mt-4" %><br />
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style:"padding-left: 10px;"%>
      <small id="emailHelp" class="form-text text-warning">Warning! Unauthorizd emails will be penalized</small>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label mt-4"%><br />
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style:"padding-left: 10px;"%>
    </div>
  </div>
  <br />
  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>
  <br />
  <div class="actions col-sm-10 d-grid gap-2">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

