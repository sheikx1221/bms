
<div style="display: flex; flex-direction: row;">
    <div style="flex: 0.3">
      <div style="margin-top: 2%"></div>
      <%= image_tag @book.book_image_link, style: "width:30vw;height:90vh;"%>
      <div style="margin-top: 2%"></div>
    </div>
    <div style="flex: 0.1"></div>
    <div style="flex: 0.6">
      <div style="margin-top: 6%"></div>
      <h2><%= @book.book_name %></h2>
      <p class="text-muted" style="font-size: 20px"><%= @book.book_description %></p>

      <div style="margin-top: 5%"></div>
      <p class="text-muted" style="font-size: 18px">By: <%= @book.book_author %></p>
      <p class="text-muted" style="font-size: 18px"><%= @book.category.category_name %></p>

      <div style="margin-top: 5%"></div>
      <p class="text-muted" style="font-size: 18px"><strong>Published: </strong><%= @book.book_publish_date %></p>
      <p class="text-muted" style="font-size: 18px"><strong>ISBN: </strong><%= @book.book_isbn %></p>
      <p class="text-muted" style="font-size: 18px"><strong>PAGES: </strong><%= @book.book_pages.to_i() %></p>

      <div style="margin-top: 5%"></div>

      <% if admin_signed_in? %>
        <p class="text-primary" style="font-size: 20px">BOOK PRICE IS: $ <%= @book.book_price %></p>
      <% else %>
        <button type="button" class="btn btn-success">BUY NOW $<%= @book.book_price %></button>
      <% end %>
    </div>
</div>