<h1>List of Categories In BMS</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Category Name</th>
      <th scope="col">Number of Books</th>
      <th colspan="3" style="text-align: center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr class="table-secondary">
        <td><p style="font-size: 20px;"><%= category.category_name %></p></td>
        <td><p style="font-size: 20px;"><%= category.books.length() %></p></td>
        <td style="display: flex; justify-content: space-around;">
          <%= link_to 'Details', category, class: 'btn btn-primary' %>
          <% if admin_signed_in? %>
            <%= link_to 'Update', edit_category_path(category), class: 'btn btn-secondary' %>          
            <%= link_to 'Delete', category, method: :delete, data: { confirm: "Deleting #{category.category_name} will also delete books present inside it. Are you sure?" }, class: 'btn btn-danger' %>    
          <% end %>
        </td>          
      </tr>
    <% end %>
  </tbody>
</table>
